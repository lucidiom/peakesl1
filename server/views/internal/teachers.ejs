<% if(locals.data){ %>
<h1 class="intpage margin-bottom-10"><%- __('title.teachers-subject', '<mark class="color" id="h-subject">' + data.subject + '</mark>') %></h1>
<% } else { %>
<h1 class="intpage margin-bottom-10"><%- __('title.teachers-subject', '') %></h1>
<% } %>

<div class="readmore">
    <% if(locals.data){ %>
    <p><%- __('teachers.infotext', '<b>' + data.subject + '</b>', '<b>' + data.subject + '</b>', '<b>' + data.subject + '</b>', '<b>' + data.subject + '</b>') %></p>
    <% } else { %>
    <p><%- __('teachers.infotext', '', '', '', '') %></p>
    <% } %>
    <a href="#" class="readmore-btn">+ <%= __('general.readmore') %></a>
</div>


