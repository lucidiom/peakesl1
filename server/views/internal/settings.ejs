<div class="row">



    <div class="col-xl-12">
        <div class="dashboard-box margin-top-0">
            <div class="headline">
                <h3><%= __('general.general') %></h3>
            </div>

            <div class="content with-padding padding-bottom-0">
                <div class="row">

                    <div class="col-auto">
                        <div class="avatar-wrapper" data-tippy-placement="bottom" title="<%= __('teacherSettings.upload-picture') %>">
                            <img class="profile-pic" src="/profilepicture/<%= user._id %>" id="ts-image" alt="" />
                            <div class="upload-button"></div>
                            <input class="file-upload" type="file" accept="image/*" id="ts-pp-upload" />
                        </div>
                    </div>

                    <div class="col">
                        <div class="row margin-top-15">
                            <div class="col-xl-3">
                                <div class="submit-field">
                                    <input type="text" class="with-border" value="<%= user.firstname %>" placeholder="<%= __('general.first-name') %>" id="ts-name">
                                </div>
                            </div>

                            <div class="col-xl-3">
                                <div class="submit-field">
                                    <input type="text" class="with-border" value="<%= user.lastname %>" placeholder="<%= __('general.last-name') %>" id="ts-lastname">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-xl-3">
                                <div class="submit-field">
                                    <select class="selectpicker currency-switcher show-tick" data-dropup-auto="false" data-size="5" id="settings-currency-picker">
                                        <option value="aud" <% if(user.currency == "aud"){ %> selected <% } %>>AUD $</option>
                                        <option value="cad" <% if(user.currency == "cad"){ %> selected <% } %>>CAD $</option>
                                        <option value="chf" <% if(user.currency == "chf"){ %> selected <% } %>>CHF fr</option>
                                        <option value="cny" <% if(user.currency == "cny"){ %> selected <% } %>>CNY CN¥</option>
                                        <option value="czk" <% if(user.currency == "czk"){ %> selected <% } %>>CZK Kč</option>
                                        <option value="dkk" <% if(user.currency == "dkk"){ %> selected <% } %>>DKK kr</option>
                                        <option value="eur" <% if(user.currency == "eur"){ %> selected <% } %>>EUR €</option>
                                        <option value="gbp" <% if(user.currency == "gbp"){ %> selected <% } %>>GBP £</option>
                                        <option value="hkd" <% if(user.currency == "hkd"){ %> selected <% } %>>HKD HK$</option>
                                        <option value="jpy" <% if(user.currency == "jpy"){ %> selected <% } %>>JPY ¥</option>
                                        <option value="nok" <% if(user.currency == "nok"){ %> selected <% } %>>NOK kr</option>
                                        <option value="nzd" <% if(user.currency == "nzd"){ %> selected <% } %>>NZD $</option>
                                        <option value="rub" <% if(user.currency == "rub"){ %> selected <% } %>>RUB ₽</option>
                                        <option value="sek" <% if(user.currency == "sek"){ %> selected <% } %>>SEK kr</option>
                                        <option value="usd" <% if(user.currency == "usd"){ %> selected <% } %>>USD $</option>
                                        <option value="zar" <% if(user.currency == "zar"){ %> selected <% } %>>ZAR R</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-xl-3">
                                <div class="submit-field">
                                    <select class="selectpicker language-switcher" data-selected-text-format="count" data-size="5" id="settings-language-picker">
                                        <option value="en" <% if(locale != "de" && locale != "ru" && locale != "uk"){ %> selected <% } %> data-content="<img src='data:image/svg+xml;utf8;base64,' alt='English' height='19px' class='lp-flag' loading='lazy'> English">
                                        </option>
                                        <option value="de" <% if(locale == "de"){ %> selected <% } %> data-content="<img src='data:image/jpeg;base64,' alt='Deutsch' height='12px' class='lp-flag' loading='lazy'> Deutsch">
                                        </option>
                                        <option value="uk" <% if(locale=="uk" ){ %> selected <% } %> data-content="<img src='data:image/svg+xml;utf8;base64,' alt='Українською' height='18px' class='lp-flag' loading='lazy'> Українською">
                                        </option>
                                        <option value="ru" <% if(locale == "ru"){ %> selected <% } %> data-content="<img src='data:image/jpeg;base64,' alt='Русский' height='12px' class='lp-flag' loading='lazy'> Русский">
                                        </option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-xl-12">
                                <div class="submit-field">
                                    <h5><%= __('teacherSettings.social-program-headline') %></h5>
                                    <p class="legal"><%= __('settings.socialprogram-text') %> <a href="/social-program/"><%= __('general.learn-more') %></a></p>
                                    <div class="checkbox ts-freeteaching-checkbox">
                                        <input type="checkbox" id="socialStudent" <% if(user.socialStudent){ %> checked <% } %> />
                                        <label for="socialStudent"><span class="checkbox-icon"></span><%= __('social-program-student.social-student-option') %></label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3">
                                <div class="submit-field margin-top-2">
                                    <button class="button button-primary button-block" id="btn-save-general"><%= __('settings.btn-save') %></button>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>






    <div class="col-xl-12">
        <div class="dashboard-box">
            <div class="headline">
                <h3><%= __('settings.change-pw') %></h3>
            </div>

            <div class="content with-padding padding-bottom-0">
                <div class="row">
                    <div class="col-xl-3">
                        <div class="submit-field">
                            <h5><%= __('settings.c-pw') %></h5>
                            <input type="password" class="with-border" id="old-pw">
                        </div>
                    </div>

                    <div class="col-xl-3">
                        <div class="submit-field">
                            <h5><%= __('settings.n-pw') %></h5>
                            <input type="password" class="with-border" id="new-pw">
                        </div>
                    </div>


                    <div class="col-xl-3">
                        <div class="submit-field">
                            <h5><%= __('settings.n-pw-repeat') %></h5>
                            <input type="password" class="with-border" id="repeat-pw">
                        </div>
                    </div>

                    <div class="col-xl-3">
                        <div class="submit-field margin-top-2">
                            <h5>&nbsp;</h5>
                            <button class="button button-primary button-block" id="btn-set-pw"><%= __('settings.btn-set-pw') %></button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>




</div>




<script src="./data/<%= locale %>.js"></script>
<script src="./controller/settings.js" defer></script>