                <script>
                    var ctd_time = moment.utc('<%- specialOfferExpires %>', "YYYY-MM-DD HH:mm:ss");
                    var ctd_active = false;
                    var ctd_interval = setInterval(function () {
                        var ctd_now = moment();
                        if (ctd_now.isBefore(ctd_time)) {
                            ctd_active = true;
                            $(".nav-notification-countdown").show();
                            var ctd_to = moment.utc(ctd_time.diff(ctd_now));
                            var ctd_to_days = ctd_time.diff(ctd_now, "days");

                            if (ctd_to_days == 0) {
                                //$("#countdown").text(ctd_to.format("HH:mm:ss"));
                            } else {
                                var ctd_txt_dys = ctd_to_days == 1 ? $.i18n('_bstr.general.day') : $.i18n('_bstr.general.days');
                                //$("#countdown").text(ctd_to_days + " " + ctd_txt_dys + " " + ctd_to.format("HH:mm:ss"));
                            }
                        } else {
                            ctd_active = false;
                            $(".nav-notification-countdown").hide();
                            clearInterval(ctd_interval);
                        }
                    }, 0);
                </script>
            </div>


